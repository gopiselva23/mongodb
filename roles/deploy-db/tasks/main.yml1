---

- name: Add mongodb repo 
  copy:
  src: /tmp/mongodb.repo
  dest: /etc/yum.repos.d/mongodb.repo
  owner: root
  group: root
  mode: 0644
 
- name: install mongodb-org
  yum:
  name: mongodb-org
  state: present
  notify:
    - start mongod
# when: mongodb_host_jarvis

- name: install mongo-10gen and mongo-10gen-server
  yum:
  name: "{{ item }}"
  state: present
  notify:
    - start mongod
  with_items: 
  - mongo-10gen
  - mongo-10gen-server